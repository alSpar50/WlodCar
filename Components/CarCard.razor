@using WlodCar.Data.Entities

<div class="card h-100 text-center">
    <img class="card-img-top" src="@Car.Img" style="object-fit:cover;height:180px;" />
    <div class="card-body d-flex flex-column">
        <h6 class="card-title">@Car.Name</h6>
        <p class="fw-bold mb-2">@Car.PricePerDay:0.00 PLN / dzień</p>

        @ChildContent    <!-- przycisk z rodzica -->
    </div>
</div>

@code {
    [Parameter, EditorRequired] public Car Car { get; set; } = default!;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}