@page "/rezerwacja"
@using WlodCar.Services
@attribute [Authorize]
@rendermode InteractiveServer

@inject ReservationState State

<PageTitle>Rezerwacja</PageTitle>



<div class="container my-4">
    @switch (step)
    {
        case 1:
            <Step1Search OnNext="@ToStep2" />
            break;

        case 2:
            <Step2Cars OnNext="@ToStep3"
                       OnPrev="@Back" />
            break;

        case 3:
            <Step3Extras OnNext="@ToStep4"
                         OnPrev="@Back" />
            break;

        case 4:
            <Step4Details OnPrev="@Back" />
            break;
    }
</div>

    


@code {
    private int step = 1;

    /* EventCallback może wskazywać na void – to wystarczy */
    private void ToStep2() => step = 2;
    private void ToStep3() => step = 3;
    private void ToStep4() => step = 4;
    private void Back() => step--;
}