@using WlodCar.Services
@inject ReservationState State

<h5 class="mb-3">Krok 1 - wybierz termin i miejsce</h5>

<EditForm Model="@State" OnValidSubmit="OnNext">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger" />

    <div class="mb-3">
        <label class="form-label">Miejsce odbioru</label>
        <InputSelect class="form-select" @bind-Value="State.PickupLocation">
            <option value="">-- Wybierz lokalizację --</option>
            <option value="Płock">Płock</option>
            <option value="Iława">Iława</option>
            <option value="Wyszków">Wyszków</option>
        </InputSelect>
        <ValidationMessage For="() => State.PickupLocation" class="text-danger" />
    </div>

    <div class="mb-3">
        <label class="form-label">Data odbioru</label>
        <InputDate class="form-control" @bind-Value="State.PickupDate" />
        <ValidationMessage For="() => State.PickupDate" class="text-danger" />
    </div>

    <div class="mb-3">
        <label class="form-label">Data zwrotu</label>
        <InputDate class="form-control" @bind-Value="State.ReturnDate" />
        <ValidationMessage For="() => State.ReturnDate" class="text-danger" />
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Dalej</button>
    </div>
</EditForm>

@code {
    [Parameter] public EventCallback OnNext { get; set; }
}